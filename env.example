# DeltaGlider Web UI Environment Configuration
# Copy this file to .env and update with your values

# AWS/S3 Configuration (defaults to AWS S3 - credentials provided via UI)
# Leave commented to force credentials via UI (recommended)
#DGCOMM_S3_ACCESS_KEY=
#DGCOMM_S3_SECRET_KEY=
#DGCOMM_S3_REGION=us-east-1
#DGCOMM_S3_ENDPOINT=
# For MinIO/LocalStack local dev, uncomment:
#DGCOMM_S3_ACCESS_KEY=deltadmin
#DGCOMM_S3_SECRET_KEY=deltasecret
#DGCOMM_S3_ENDPOINT=http://localhost:9000
#DGCOMM_S3_REGION=us-east-1

# DeltaGlider Configuration
DG_LOG_LEVEL=INFO
DG_CACHE_DIR=/tmp/.deltaglider/cache
DG_MAX_RATIO=0.5

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
PORT=8000
SECRET_KEY=change-this-to-a-random-secret-key
CORS_ORIGINS=http://localhost:5173

# Frontend Configuration (used at build time)
# Change this if your backend runs on a different port
VITE_API_URL=http://localhost:8000/api/v1
